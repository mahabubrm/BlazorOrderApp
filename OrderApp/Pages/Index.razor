@page "/"
@using OrderApp.Models.ViewModels;
@inject ToastManager toastService
@inject IJSRuntime JSRuntime
<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<button class="btn btn-success" @onclick="@(() => toastService.ShowToast("I'm a SUCCESS message", ToastLevel.Success))">Success Toast</button>
<button type="button" class="btn btn-info" @onclick="ShowAlertWindow">Show Alert Window</button>
    

@code{
    public async Task ShowAlertWindow()
    {
        await JSRuntime.InvokeVoidAsync("showAlert", "JS function called from .NET");
    }
}
